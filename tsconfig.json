{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
    // "strict": true
  },
  "exclude": ["node_modules", "**/__mocks__/*", "**/__tests__/*"],
  "include": ["**/*.ts", "**/*.tsx"]
}
